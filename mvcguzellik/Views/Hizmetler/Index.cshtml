@model IEnumerable<mvcguzellik.Models.mvcHizmetlerModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "Ekle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HizmetAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HizmetAmaci)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HizmetAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HizmetAmaci)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                <a href="@Url.Action("Ekle","Hizmetler",new { id = item.HizmetNo })" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i>Edit</a>
                <a onclick="Sil(@item.HizmetNo)" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>Sil
            </td>
        </tr>
    }


</table>
@section scripts{
    <script>
    $(function () {
        var successMesage = '@TempData["SuccessMessage"]';
        if (successMesage != '')
            alertify.success(successMesage);
    });
    function Sil(id) {
        alertify.confirm('Silme işlemi', 'Kaydı silmek ister misiniz?', function () { window.location.href = '@Url.Action("Sil","Hizmetler")/' + id; }, null);
    }

    </script>
}

