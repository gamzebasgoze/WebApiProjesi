@model mvcguzellik.Models.mvcCalisanlarModel
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.CalisanNo)
        <div class="form-group">
            @Html.LabelFor(model => model.CalisanAdi)
            @Html.TextBoxFor(model => model.CalisanAdi, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CalisanAdi)<br />



            @Html.LabelFor(model => model.Yas)
            @Html.TextBoxFor(model => model.Yas, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Yas)<br />



            @Html.LabelFor(model => model.Telefon)
            @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Telefon)<br />



            @Html.LabelFor(model => model.Mail)
            @Html.TextBoxFor(model => model.Mail, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Mail)<br />
        </div>
        <div class="form-body">
            <input type="submit" value="Kaydet" class="btn btn-success" />
            <input type="reset" value="Reset" class="btn btn-success" />
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jgeryval");
}

