@model IEnumerable<mvcguzellik.Models.mvcSalonlarModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "Ekle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SalonAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalisanSayisi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VerilenHizmetler)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HizmetSayisi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalonAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalisanSayisi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerilenHizmetler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HizmetSayisi)
            </td>
            <td>
                <a href="@Url.Action("Ekle","Salonlar",new { id = item.SalonNo })" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i>Edit</a>
                <a onclick="Sil(@item.SalonNo)" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>Sil
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
    $(function () {
        var successMesage = '@TempData["SuccessMessage"]';
        if (successMesage != '')
            alertify.success(successMesage);
    });
    function Sil(id) {
        alertify.confirm('Silme işlemi', 'Kaydı silmek ister misiniz?', function () { window.location.href = '@Url.Action("Sil","Salonlar")/' + id; }, null);
    }

    </script>
}
